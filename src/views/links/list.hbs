<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-lg-3 col-md-4 col-sm-12 mt-3">
                <div class="card text-center h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                            <img src="{{icon}}" width="20" height="20" alt="{{title}} image">
                                {{title}}
                            </h3>
                        </a>
                        <div class="card-text">
                            <p class="m-2 text-break text-description">{{description}}</p>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <p class="text-muted">{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="text-danger m-1">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a href="/links/edit/{{id}}" class="text-primary m-1">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 col-sm-12 col-lg-3 mx-auto mt-5">
                <div class="text-center">
                    <p>No hay links guardados</p>

                    <a href="/links/add" class="btn btn-primary btn-block">Crear link</a>
                </div>
          
            </div>
        {{/each}}

    </div>
</div>